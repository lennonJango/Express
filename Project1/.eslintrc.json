{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["react"],
  "rules": {
    "no-unused-vars": ["error", { "argsIgonorePattern": "req|res|next|val" }],
    "prefer-destructuring": ["error", { "object": true, "array": false }],
    "no-process-exit": "off",
    "no-param-reassign": "off",
    "object-shorthand": "off",
    "callback-return": "off",
    "consistent-return": "off",
    "no-underscore-dangle": "off"
  }
}
